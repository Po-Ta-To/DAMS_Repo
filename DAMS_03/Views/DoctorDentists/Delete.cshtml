@model DAMS_03.Models.DoctorDentist

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Dentist</h2>

<div>
    <h4>Are you sure you want to delete this?</h4>
    <hr />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="form-group">
                @Html.LabelFor(model => model.DoctorDentistID, "Dentist ID", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.DoctorDentistID, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = true } })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Delete" class="btn btn-danger" />
                    <button class="btn btn-primary" type="button"
                            onclick="location.href='@Url.Action("Index", "DoctorDentists")'">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
}
</div>
