<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <!-- jQuery & Bootstrap CDN -->
    <script src="~/scripts/jquery.min.js"></script>
    <link href="~/content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/scripts/bootstrap.min.js"></script>
</head>
<body>
    <div id="wrap">
        @if (User.Identity.IsAuthenticated)
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        @*<img src="~/images/Medisyslogo.jpg" alt="MedisysLogo" class="" />*@

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        @Html.ActionLink("Dental Appointment Management System", "Menu", "Home", new { area = "" }, new { @class = "navbar-brand" })
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav">
                            <li class="dropdown">
                                <a href="#" id="adminControls" data-toggle="dropdown" class="dropdown-toggle" role="button" title="Admin Controls">Admin Controls<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="drop1">
                                    <li>
                                        <a href="@Url.Action("Index", "AccountControls")" class="elements">
                                            <span>Account Controls</span>
                                        </a>
                                    </li>
                                    <li><a href="@Url.Action("Index", "ListingControls")" class="elements"><span>Listing Controls</span></a></li>
                                </ul>
                            </li>
                            <li class="dropdown">
                                <a href="#" id="manageAppts" data-toggle="dropdown" class="dropdown-toggle" role="button" title="Appointment Management">Manage Appointments<b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="drop2">
                                    <li>
                                        <a href="@Url.Action("Index", "Appointments")" class="elements">
                                            <span>Manage All Appointments</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("IndexBy","Appointments", new { id = "1" })" class="elements">
                                            <span>Manage Appointment Requests</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("IndexBy", "Appointments", new { id = "3" })" class="elements">
                                            <span>Manage Booked Appointments</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("IndexBy","Appointments", new { id = "2" })" class="elements">
                                            <span>View Appointment Cancelled and Declined Requests</span>
                                        </a>
                                    </li>
                                    <li>
                                        <a href="@Url.Action("IndexBy","Appointments", new { id = "5" })" class="elements">
                                            <span>View Completed Appointment</span>
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        </ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="navbar navbar-inverse navbar-fixed-top">
                <div class="container">
                    <div class="navbar-header">
                        @*<img src="~/images/Medisyslogo.jpg" alt="ASP.NET" class="img-responsive" />*@

                        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                            <span class="icon-bar"></span>
                        </button>
                        <a asp-controller="Home" asp-action="Index" class="navbar-brand">Dental Appointment Management System</a>
                    </div>
                    <div class="navbar-collapse collapse">
                        <ul class="nav navbar-nav"></ul>
                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>